{
  "name": "x402-tollbooth",
  "version": "0.5.1",
  "description": "Turn any API into a paid x402 API gateway. YAML config, dynamic pricing, multi-upstream proxy.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tollbooth": "./dist/cli.js",
    "x402-tollbooth": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/cli.ts",
    "build": "bun run scripts/build.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "check": "biome check ./src",
    "check:fix": "biome check ./src --fix",
    "type-check": "tsc --noEmit",
    "ci": "bun run check && bun run type-check && bun test",
    "npm-dry-run": "npm publish --dry-run"
  },
  "dependencies": {
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "viem": "^2.0.0",
    "@biomejs/biome": "^2.3.14",
    "@biomejs/cli-darwin-arm64": "2.3.14",
    "@biomejs/cli-darwin-x64": "2.3.14",
    "@biomejs/cli-linux-arm64": "2.3.14",
    "@biomejs/cli-linux-x64": "2.3.14",
    "@types/bun": "^1.2.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "x402",
    "payment",
    "api-gateway",
    "proxy",
    "micropayments",
    "agent",
    "stablecoin",
    "usdc"
  ],
  "author": "Loa212",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x402-tollbooth/gateway.git"
  },
  "homepage": "https://github.com/x402-tollbooth/gateway#readme",
  "bugs": {
    "url": "https://github.com/x402-tollbooth/gateway/issues"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}