{
  "name": "x402-tollbooth",
  "version": "1.0.0",
  "description": "Turn any API into a paid x402 API gateway. YAML config, dynamic pricing, multi-upstream proxy.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tollbooth": "./dist/cli.js",
    "x402-tollbooth": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npx tsx --watch src/cli.ts",
    "build": "npx tsx scripts/build.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "check": "biome check ./src",
    "check:fix": "biome check ./src --fix",
    "type-check": "tsc --noEmit",
    "ci": "npm run check && npm run type-check && npm run test",
    "npm-dry-run": "npm publish --dry-run"
  },
  "dependencies": {
    "ioredis": "^5.4.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "viem": "^2.0.0",
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.0.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "x402",
    "payment",
    "api-gateway",
    "proxy",
    "micropayments",
    "agent",
    "stablecoin",
    "usdc"
  ],
  "author": "Loa212",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x402-tollbooth/gateway.git"
  },
  "homepage": "https://github.com/x402-tollbooth/gateway#readme",
  "bugs": {
    "url": "https://github.com/x402-tollbooth/gateway/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
